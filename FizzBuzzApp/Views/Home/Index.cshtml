@model List<FizzBuzzApp.Models.FizzBuzzModel>

<h1>FizzBuzz</h1>

<form method="post">
    <label for="number">Enter a number between 1 and 1000:</label>
    <input type="number" id="number" name="number" min="1" max="1000" required />
    <button type="submit">Submit</button>
</form>

@if (Model != null && Model.Count > 0)
{
    <ul>
        @foreach (var item in Model)
        {
            <li style="color:@(item.Output.Contains("izz") ? "blue" : item.Output.Contains("uzz") ? "green" : "black")">@item.Output</li>
        }
    </ul>
}

