@model List<FizzBuzzApp.Core.Models.FizzBuzzModel>

<h1>FizzBuzz</h1>

<form method="post">
    <label for="number">Enter a number between 1 and 1000:</label>
    <input type="number" id="number" name="number" min="1" max="1000" required />
    <button type="submit">Submit</button>
</form>

@if (Model != null && Model.Count > 0)
{
    <ul>
        @foreach (var item in Model)
        {
            <li style="color:@item.Color.ToString().ToLower()">@item.Output</li>
        }
    </ul>
}

@if (Model != null && Model.Count > 0)
{
    <nav aria-label="Pagination">
        <ul class="pagination">
            @if (ViewBag.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/Home/Index?pageNumber=@(ViewBag.PageNumber - 1)">Previous</a>
                </li>
            }
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                    <a class="page-link" href="/Home/Index?pageNumber=@i">@i</a>
                </li>
            }
            @if (ViewBag.PageNumber < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/Home/Index?pageNumber=@(ViewBag.PageNumber + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}
